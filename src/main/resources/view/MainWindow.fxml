<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root onCloseRequest="#handleExit" title="Flashmind" type="Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <BorderPane prefHeight="304.0" prefWidth="493.0" styleClass="background">
            <top>
               <MenuBar fx:id="MenuBar" BorderPane.alignment="CENTER">
                 <menus>
                   <Menu mnemonicParsing="false" text="Action">
                     <items>
                       <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Close" />
                     </items>
                   </Menu>
                   <Menu mnemonicParsing="false" text="Help">
                     <items>
                       <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Show Help" />
                     </items>
                   </Menu>
                 </menus>
               </MenuBar>
            </top>
            <bottom>
               <StackPane fx:id="statusbarPlaceholder" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" BorderPane.alignment="CENTER" />
            </bottom>
            <right>
               <ScrollPane fx:id="flashcardListPanelPlaceholder" pannable="true" prefHeight="259.0" BorderPane.alignment="CENTER" />
            </right>
            <center>
               <VBox fx:id="test" alignment="CENTER" BorderPane.alignment="CENTER">
                  <children>
                     <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" />
                     <StackPane fx:id="resultDisplayPlaceholder" styleClass="pane-with-border" VBox.vgrow="ALWAYS" />
                     <StackPane fx:id="statisticsDisplayPlaceholder" styleClass="pane-with-border" VBox.vgrow="ALWAYS" />
                  </children>
               </VBox>
            </center></BorderPane>
         <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
         </stylesheets>
        </Scene>
    </scene>
</fx:root>
