<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root maxHeight="520.0" maxWidth="1500.0" minHeight="300.0" minWidth="600.0" title="FlashMind" type="Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
         <HBox maxHeight="500.0" maxWidth="700.0" minHeight="420.0" minWidth="400.0" prefHeight="683.0" prefWidth="400.0">
            <children>
               <VBox>
                  <children>
                     <MenuBar fx:id="MenuBar">
                       <menus>
                         <Menu mnemonicParsing="false" text="Action">
                           <items>
                             <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Close" />
                           </items>
                         </Menu>
                         <Menu mnemonicParsing="false" text="Help">
                           <items>
                             <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Show Help" />
                           </items>
                         </Menu>
                       </menus>
                     </MenuBar>
                     <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" />
                     <StackPane fx:id="resultDisplayPlaceholder" minHeight="220.0" minWidth="200.0" styleClass="pane-with-border" />
                     <StackPane fx:id="statisticsDisplayPlaceholder" prefHeight="150.0" prefWidth="200.0" styleClass="pane-with-border" />
                  </children>
               </VBox>
               <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="800.0" minWidth="500.0" styleClass="pane-with-border-2">
                  <children>
                     <StackPane fx:id="flashcardListPanelPlaceholder" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="503.0" minWidth="500.0" prefHeight="503.0" prefWidth="203.0" styleClass="pane-with-border-2" />
                  </children>
               </VBox>
            </children>
         </HBox>
         <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
         </stylesheets>
        </Scene>
    </scene>
</fx:root>
